# Brewfile for Hugo site development dependencies
# Install with: brew bundle

# Required for Hugo static site generation
brew "hugo"

# Required for Sass compilation in hugo-texify3 theme
tap "sass/sass"
brew "sass/sass/sass"

# Required for PostCSS processing in hugo-texify3 theme
brew "node"

# Version management (if not already installed)
brew "asdf"

# Git and development tools
brew "git"
brew "gh"

# Optional: useful development tools
brew "ripgrep"
brew "fd"
brew "bat"